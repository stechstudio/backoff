{
    "name"         : "jbzoo/retry",
    "type"         : "library",
    "description"  : "Tiny PHP library providing retry functionality with multiple backoff strategies and jitter support",
    "license"      : "MIT",
    "keywords"     : [
        "jbzoo", "jitter", "retry", "backoff", "middleware",
        "back-off", "retry-after", "failure", "restart", "retryable"
    ],

    "authors"      : [
        {
            "name"  : "Joseph Szobody",
            "email" : "joseph@stechstudio.com",
            "role"  : "lead"
        },
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com"
        }
    ],

    "require"      : {
        "php" : ">=7.2"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev" : "^2.11.0",
        "jbzoo/jbdump"      : ">=1.5.6"
    },

    "replace"      : {
        "stechstudio/backoff" : "*"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\Retry\\" : "src"
        },
        "files" : [
            "src/defines.php",
            "src/aliases.php"
        ]
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
